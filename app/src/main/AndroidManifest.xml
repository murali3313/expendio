<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nandhakumargmail.muralidharan.expendio">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ExpenseListener"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ExpenseAcceptance"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".NewExpensesCreation"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />

        <activity
            android:name=".ExpenseTimelineView"
            android:theme="@android:style/Theme.Holo.NoActionBar" />

        <activity
            android:name=".DayWiseExpenseEdit"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />

        <activity
            android:name=".MonthWiseExpenseEdit"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
    </application>

</manifest>